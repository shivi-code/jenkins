pipeline{
       agent any
        stages{
       
             stage('fetch code'){
                  steps{
                   echo 'fetching code'
                   git branch: 'main', url: 'https://github.com/shivi-code/jenkins.git'
                  }
              }


            stage('install apache'){
                 steps{
                   echo 'installing apache'
                   sh 'sudo apt install apache2 -y'
                  }
            }

           stage('deploy appliation'){
                steps{
                   echo 'deploying appliation'
                   sh 'sudo cp -R * /var/www/html/'
                  }
          }
    }

}
